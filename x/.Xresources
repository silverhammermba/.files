! 256 color
XTerm*termName: xterm-256color

! colors
XTerm.vt100.background: black
XTerm.vt100.foreground: white

! unicode fonts
XTerm.vt100.utf8: true
XTerm.vt100.renderFont: true
XTerm.vt100.faceName: DejaVu Sans Mono
XTerm.vt100.faceSize: 10

! disable bell
XTerm.vt100.visualBell: true
XTerm.vt100.visualBellDelay: 0

! copy-paste
XTerm.vt100.translations: #override \
	 Shift<BtnUp>:           select-end(PRIMARY, CUT_BUFFER0) \n\
	~Shift<BtnUp>:           select-end(CLIPBOARD, CUT_BUFFER1) \n\
	 Meta Shift Ctrl <Key>V: insert-selection(PRIMARY, CUT_BUFFER0) \n\
	~Meta Shift Ctrl <Key>V: insert-selection(CLIPBOARD, CUT_BUFFER1)
