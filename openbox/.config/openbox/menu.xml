<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

	<menu id="system-menu" label="Config">
		<item label="Openbox Configuration Manager">
			<action name="Execute"><command>obconf</command></action>
		</item>
		<item label="Reconfigure Openbox">
			<action name="Reconfigure" />
		</item>
	</menu>

	<menu id="root-menu" label="Openbox 3">
		<item label="Chromium">
			<action name="Execute"><command>chromium</command></action>
		</item>
		<item label="Steam">
			<action name="Execute"><command>/home/max/scripts/restart.sh steam</command></action>
		</item>
		<item label="Terminal">
			<action name="Execute"><command>xterm</command></action>
		</item>
		<item label="Vim">
			<action name="Execute"><command>gvim</command></action>
		</item>
		<item label="VLC">
			<action name="Execute"><command>vlc</command></action>
		</item>
		<item label="XBMC">
			<action name="Execute"><command>/home/max/scripts/restart.sh xbmc</command></action>
		</item>
		<separator />
		<menu id="system-menu"/>
		<separator />
		<item label="Log Out">
			<action name="Exit">
				<prompt>yes</prompt>
			</action>
		</item>
	</menu>

</openbox_menu>
